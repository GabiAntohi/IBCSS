{{>header_nav_admin}}
<!-- Content Row -->
<hr />
<div id="wrapper" class="row">
    <section class="banner_contact">
        <div class="onbanner">
            <h4>{{title}}</h4>
            <h5>These are all the products in the shop, you can edit or delete. You can add products from the menu</h5>
        </div>
    </section>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div id="success" class="alert alert-success {{#if noMessage}}invisible{{/if}}">
                    {{ successMgs }}
                </div>
            </div>
        </div>



        <div class="shop tablehead">
            <div class="details imgPath">
                <p>Image</p>
            </div>
            <div class="details">
                <p>Name</p>
            </div>
            <div class="details prc">
                <p>Price: &euro;</p>
            </div>
            <div class="details descr">
                <p>Description</p>
            </div>
            <div class="details actions">
                <p>Action</p>
            </div>
        </div>

            {{#each products}}
            {{#each this}}
            <div class="size products clearfix" style="clear:both">
                <div class="shop clearfix">
                    <div class="details imgPath">
                        <p>
                            <img src="{{this.imagePath}}" alt="IMG-BLOG">
                        </p>
                    </div>
                    <div class="details">
                        <p>
                            {{this.name}}
                        </p>
                    </div>
                    <div class="details prc">
                        <p>

                            {{this.price}}
                        </p>
                    </div>
                    <div class="details descr">
                        <p>
                            {{this.description}}
                        </p>
                    </div>
                    <div class="details actions">
                        <a href="/admin/product/{{this._id}}" class="buttn" >Edit</a>
                        <form method="POST" style="width:100%" action="/admin/product/{{this._id}}/delete?_method=DELETE">
                            <button type="submit" class="buttn" style="background-color:gray;">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/each}}

        </div>
    </div>
{{>footer_admin}}


